<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_nav"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.software_engineering_project.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.software_engineering_project.fragments.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_registerFragment_to_registrationSuccessfulFragment"
            app:destination="@id/registrationSuccessfulFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationSuccessfulFragment"
        android:name="com.example.software_engineering_project.fragments.RegistrationSuccessfulFragment"
        android:label="fragment_registration_successful"
        tools:layout="@layout/fragment_registration_successful" >
        <action
            android:id="@+id/action_registrationSuccessfulFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>